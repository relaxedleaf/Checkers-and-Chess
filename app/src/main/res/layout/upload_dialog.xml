<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:background="@drawable/input_add_post_bg"
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp">
            <ImageView
                android:id="@+id/imageeview"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:tint="@color/black"
                android:src="@drawable/ic_room_video">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imageeview"
                android:orientation="vertical"
                android:layout_marginStart="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload video"
                    android:textSize="17sp"
                    android:fontFamily="@font/roboto"
                    app:tint="@color/black"
                    android:includeFontPadding="false"
                    android:id="@+id/txt_upload_video"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share your content with our large community"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>

