<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp">

    <!-- First User Layout -->
    <LinearLayout
        android:id="@+id/firstUserLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- First User Profile -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/firstUserProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person1"
            android:visibility="gone" />

        <!-- First User Message Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First User Image -->
            <ImageView
                android:id="@+id/firstUserImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient_connect"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- First User Text Message -->
            <TextView
                android:id="@+id/firstUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg"
                android:backgroundTint="#FB40F8"
                android:textColor="#F4F2F2"
                android:padding="8dp"
                android:layout_marginTop="2dp"
                android:text="First User Text" />

            <!-- First User Time and Seen Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="end">

                <!-- First User Time -->
                <TextView
                    android:id="@+id/firstUserTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A0A0A0"
                    android:text="10:00 AM"
                    android:textSize="12sp" />

                <!-- First User Seen Status -->
                <TextView
                    android:id="@+id/firstUserSeenStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp"
                    android:text="Seen"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Second User Layout -->
    <LinearLayout
        android:id="@+id/secondUserLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Second User Message Layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Second User Text Message -->
            <TextView
                android:id="@+id/secondUserText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_bg"
                android:backgroundTint="#00C853"
                android:textColor="#F4F3F4"
                android:padding="8dp"
                android:layout_marginTop="2dp"
                android:text="Second User Text" />

            <!-- Second User Image -->
            <ImageView
                android:id="@+id/secondUserImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient_connect"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <!-- Second User Time and Seen Layout -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="end">

                <!-- Second User Time -->
                <TextView
                    android:id="@+id/secondUserTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A0A0A0"
                    android:text="10:00 AM"
                    android:textSize="12sp" />

                <!-- Second User Seen Status -->
                <TextView
                    android:id="@+id/secondUserSeenStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp"
                    android:text="Seen"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Second User Profile -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/secondUserProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person1"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Reply Preview Section -->
    <LinearLayout
        android:id="@+id/replyPreviewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/gray_bg"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="parent">

        <!-- Replied Message Text -->
        <TextView
            android:id="@+id/repliedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5E35B1"
            android:textSize="14sp"
            android:text="Replied message preview"
            android:layout_marginEnd="8dp" />

        <!-- Close Reply Preview Icon -->
        <ImageView
            android:id="@+id/closeReplyPreview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
